@model IEnumerable<ClinicaOdontologica.Models.UsuarioModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .OcultarId{
        display: none;
    }
</style>

<h1 class="d-flex justify-content-center">USUARIOS</h1>
<hr />
<div class="card">
    <div class="card-header">
       Lista de Usuarios
    </div>
    <div class="card-body">
        <p>
            <a class="btn btn-success" asp-action="GuardarUsuario">Crear Nuevo</a>
        </p><hr />
        <table class="table">
            <thead>
                <tr>
                    <th class="OcultarId">IdUsuario</th>
                    <th>Rol</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Dirección</th>
                    <th>Telefono</th>                  
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="OcultarId">
                            @Html.DisplayFor(modelItem => item.IdUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rol)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>                       
                        <td>
                            <a asp-action="ModificarUsuario" asp-controller="Usuario" class=" " asp-route-IdUsuario="@item.IdUsuario"><i class="fa-solid fa-user-pen"></i></a>
                        </td>
                        <td>
                            <!-- Button trigger modal -->
                            <button class="link-danger" data-bs-toggle="modal" data-bs-target="#EliminarModal-@item.IdUsuario">
                                <i class="fa-solid fa-trash-can "></i>
                             </button>                           
                            <!-- Modal -->
                            <div class="modal fade" id="EliminarModal-@item.IdUsuario" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Eliminar Usuario</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Estas seguro de Eliminar al Usuario?
                                        </div>
                                        <div class="modal-footer">                                          
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                              <form asp-action="EliminarUsuario" asp-controller="Usuario" method="post">
                                                    <input type="hidden" name="idUsuario" value="@item.IdUsuario" />
                                                     <button type="submit" class="btn btn-primary">Eliminar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
    

</div >
