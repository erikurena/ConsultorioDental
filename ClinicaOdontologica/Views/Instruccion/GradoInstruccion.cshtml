@model GradoInstruccionModel
@{
    ViewData["Title"] = "GradoInstruccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Informacion Personal
    </div>
    <div class="card-body">
    <form asp-action="GradoInstruccion" asp-controller="Instruccion" method="post">
        <div class="mb-3">
            <label for="IdGradoInstruccion">Grado de Instruccion:</label>
            @Html.DropDownListFor(model => new GradoInstruccionModel().IdGradoInstruccion, (IEnumerable<SelectListItem>)ViewBag.Instruccion, "Selecciona una categoría", new { @class = "form-control" })
        </div>
    </form>
</div>
</div>



